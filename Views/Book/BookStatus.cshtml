@model Book

<h2>Adjust Book Status</h2>

<form asp-action="BookStatus" method="post">
    <input type="hidden" asp-for="BookId" />
    <div class="form-group">
        <label asp-for="BookStatus" class="form-label">Book Status</label>
        <select asp-for="BookStatus" class="form-control">
            <option value="">Select A Completion Status</option>
            <option value="Not Started">Not Started</option>
            <option value="In Progress">In Progress</option>
            <option value="Completed">Completed</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save Status</button>
</form>
